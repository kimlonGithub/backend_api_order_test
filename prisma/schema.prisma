// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Example User model
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@map("users")
}

model Order {
  id         Int      @id @default(autoincrement())
  customerId Int?
  total      Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now())
  customer   User?    @relation(fields: [customerId], references: [id])

  @@map("orders")
}

// Translate regions (Option B: locales in separate junction table)
model TranslateRegion {
  id            String                  @id @db.VarChar(32)
  name          String                  @db.VarChar(255)
  nativeName    String                  @map("native_name") @db.VarChar(255)
  flagUrl       String                  @map("flag_url") @db.VarChar(512)
  defaultLocale String                  @map("default_locale") @db.VarChar(16)
  isActive      Boolean                 @default(true) @map("is_active")
  sortOrder     Int?                    @map("sort_order")
  createdAt     DateTime                @default(now()) @map("created_at")
  updatedAt     DateTime                @updatedAt @map("updated_at")
  locales       TranslateRegionLocale[]

  @@map("translate_regions")
}

model TranslateRegionLocale {
  regionId   String          @map("region_id") @db.VarChar(32)
  localeCode String          @map("locale_code") @db.VarChar(16)
  sortOrder  Int             @default(0) @map("sort_order")
  region     TranslateRegion @relation(fields: [regionId], references: [id], onDelete: Cascade)

  @@id([regionId, localeCode])
  @@map("translate_region_locales")
}
